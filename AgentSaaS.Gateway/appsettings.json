{
  "ReverseProxy": {
    "Routes": {
      "route-web": {
        "ClusterId": "cluster-web",
        "Match": { "Path": "{**catch-all}" } // Tudo vai pro WebApp por padr√£o
      },
      "route-webhooks": {
        "ClusterId": "cluster-orchestrator", // Manda webhooks direto pro backend
        "Match": { "Path": "/api/webhooks/{**catch-all}" }
      }
    },
    "Clusters": {
      "cluster-web": {
        "Destinations": { "destination1": { "Address": "http://webapp:8080" } }
      },
      "cluster-orchestrator": {
        "Destinations": { "destination1": { "Address": "http://orchestrator:8080" } }
      }
    }
  }
}