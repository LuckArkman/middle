@using AgentSaaS.Core.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AgentSaaS.Core.Entities.Agent

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@Model.Name <span class="badge bg-secondary">@Model.Area</span></h2>
        <div>
            @if(Model.Status == AgentStatus.Parado)
            {
                <form asp-action="ToggleStatus" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="command" value="START" />
                    <button class="btn btn-success">▶ Iniciar Agente</button>
                </form>
            }
            else
            {
                <form asp-action="ToggleStatus" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="command" value="STOP" />
                    <button class="btn btn-danger">⏹ Parar Agente</button>
                </form>
            }
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <div id="agent-status-card">
                @await Html.PartialAsync("_AgentStatusPartial", Model)
            </div>

            <!-- Botão que troca o status e atualiza APENAS a div acima -->
            <button hx-post="@Url.Action("ToggleStatus", "Agents", new { id = Model.Id })"
                    hx-target="#agent-status-card"
                    hx-swap="outerHTML"
                    class="btn btn-warning">
                @(Model.Status == AgentStatus.Executando ? "Pausar" : "Retomar")
            </button>
        </div>

        <div class="col-md-8">
            <div class="card bg-dark text-white">
                <div class="card-header border-secondary d-flex justify-content-between">
                    <span>Terminal de Execução (Live)</span>
                    <small class="text-muted">Conectado via SignalR</small>
                </div>
                <div class="card-body" style="height: 400px; overflow-y: auto; font-family: 'Courier New', monospace;" id="logConsole">
                    <div class="text-muted">> Aguardando logs...</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const agentId = "@Model.Id";
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/agentHub")
            .build();

        connection.on("ReceiveLog", function (message) {
            const consoleDiv = document.getElementById("logConsole");
            const newLine = document.createElement("div");

            // Estilização simples baseada no conteúdo
            if(message.includes("ERROR")) newLine.style.color = "#ff6b6b";
            else if(message.includes("INFO")) newLine.style.color = "#51cf66";
            else newLine.style.color = "#adb5bd";

            newLine.textContent = "> " + message;
            consoleDiv.appendChild(newLine);
            consoleDiv.scrollTop = consoleDiv.scrollHeight; // Auto-scroll
        });

        connection.start().then(function () {
            console.log("SignalR Connected");
            connection.invoke("JoinAgentGroup", agentId);
        }).catch(err => console.error(err));
    </script>
}